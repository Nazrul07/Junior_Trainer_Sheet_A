#include<bits/stdc++.h>
using namespace std;
int main()
{
   int t,i,l;
   string s;
   cin>>t;
   for(i=0 ; i<t ; i++)
   {
       cin>>s;
       l=s.size();
       if(l>10)
       {
           cout<<s[0];
           cout<<l-2;
           cout<<s[l-1];
           cout<<endl;
       }
       else
       {
           cout<<s<<endl;
       }
   }
    return 0;
}
