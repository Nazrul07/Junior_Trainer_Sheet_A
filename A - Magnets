#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t,temp,Count=1;
    cin>>t;
    int a[t];
    for(int i=0 ; i<t ; i++)
    {
        cin>>a[i];
        if(i==0) temp=a[i];
        if(temp!=a[i])
        {
            Count++;
            temp=a[i];
        }
    }
    cout<<Count<<endl;
    return 0;
}
